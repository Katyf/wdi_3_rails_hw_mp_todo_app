<div class="headcolor">
<br>
<h1>Tasks for: <%= @list.name %></h1>
</div>
<div class = "bar"></div>
<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Complete By</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.complete_by %></td>
        <td><%= task.notes.length%> </td>
        <td><%= link_to "Task", list_task_path(task.list_id, task.id)%></td>
        <td><%= link_to 'Edit', edit_list_task_path(@list, task) %></td>
       <td><%= link_to 'Destroy', list_task_path(@list, task), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class= "box">
<%= link_to 'Lists', list_path(@list) %> |
<%= link_to 'New Task', new_list_task_path(@list.id) %> |
<%= link_to 'Back', :back %>
</div>
