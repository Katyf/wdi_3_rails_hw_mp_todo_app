<h1>Tasks for <%= @list.name %>:</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Complete By</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.complete_by %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_list_task_path(@list.id) %>

